div#ns2-code, div#ns3-code {
    overflow: auto;
}
div.grippie {
    background: #EEEEEE url(/cse28/ant/v_media/lib/TextArea_Resizer_1.0.4/grippie.png) no-repeat scroll center 2px;
    border-color: #DDDDDD;
    border-style: solid;
    border-width: 0pt 1px 1px;
    cursor: s-resize;
    height: 9px;
    overflow: hidden;
    width: 99.9%;
}
.resizable-textarea textarea {
    display: block;
    margin-bottom: 0pt;
    width: 96%;
    height: 470px;
}

.ns2-code-output, .ns3-code-output {
    width: 97.4%;
    background-color: #F0F0F0;
    border: 1px ridge #0E8DE0;
    padding: 5px;
}
.ns2-code-trace-block, .ns3-code-trace-block {
    background-color: #F0F0F0;
    border: 1px ridge #0E8DE0;
    padding: 2px;
    display: block;
    width: 98%;
}

.bluish{
    background-color: #F2F2F2;
    border: 1px ridge #0E8DE0;
    padding: 5px;
}

.button-clear, .button-run {
    
}

ul.trace-link {
    list-style-image: url(/cse28/ant/v_media/images/new/icons/bullets/bullet_blue2_16x16.png);    
}
ul.trace-link a {
    display: inline;
}
.trace-file-link-hidden {
    visibility: hidden;
}
.trace-file-link-visible {
    visibility: visible;
    font-weight: 200;
}

.invisible {
    visibility: hidden;
}

.marginT5 {
    margin-top: 5px;
}
